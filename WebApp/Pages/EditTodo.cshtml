@page
@using Domain
@model WebApp.Pages.EditTodo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Todo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Todo.TodoId" />
            <div class="form-group">
                <label asp-for="Todo.HeadLine" class="control-label">Head Line</label>
                <input asp-for="Todo.HeadLine" class="form-control" />
                <span asp-validation-for="Todo.HeadLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Todo.Description" class="control-label"></label>
                <input asp-for="Todo.Description" class="form-control" />
                <span asp-validation-for="Todo.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Todo.Created" class="control-label"></label>
                <input asp-for="Todo.Created" type="date" class="form-control" />
                <span asp-validation-for="Todo.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Todo.DueDate" class="control-label">Due Date</label>
                <input asp-for="Todo.DueDate" type="date" class="form-control" />
                <span asp-validation-for="Todo.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Todo.Done" /> @Html.DisplayNameFor(model => model.Todo.Done)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Todo.Priority" class="control-label"></label>
                <select asp-for="Todo.Priority" asp-items="Html.GetEnumSelectList<Priority>()" class="form-control"></select>
                <span asp-validation-for="Todo.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Todo.PriorityNo" class="control-label">Priority number</label>
                <input asp-for="Todo.PriorityNo" class="form-control" min="1" max="5"/>
                <span asp-validation-for="Todo.PriorityNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Todo.UserId" class="form-control" type="hidden" asp-items="ViewBag.UserId" />
                <span asp-validation-for="Todo.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Todo.CategoryId" class="control-label">Category</label>
                <select asp-for="Todo.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Todo.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="TodoList" asp-route-id="@Model.Todo.UserId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
