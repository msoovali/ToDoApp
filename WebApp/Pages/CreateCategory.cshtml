@page
@model WebApp.Pages.CreateCategory

@{
    ViewData["Title"] = "New Category";
}

<h1>Create</h1>
<div>
    <a asp-page="NewTodo" asp-route-id="@Model.UserId">Back to List</a>
</div>
<h4>category</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.CategoryName" class="control-label">Category name</label>
                <input asp-for="Category.CategoryName" class="form-control" placeholder="Enter category name"/>
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Category.UserId" value="@Model.UserId" type="hidden"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
